# Dockerfile - Using Debian-based image for glibc compatibility
FROM node:22-slim

# Set working directory inside the container
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 \
    ffmpeg \
    curl \
    ca-certificates \
    unzip \
    && rm -rf /var/lib/apt/lists/*

# Install Deno (JavaScript runtime required by yt-dlp for YouTube)
RUN curl -fsSL https://github.com/denoland/deno/releases/latest/download/deno-x86_64-unknown-linux-gnu.zip -o /tmp/deno.zip \
    && unzip /tmp/deno.zip -d /usr/local/bin \
    && chmod +x /usr/local/bin/deno \
    && rm /tmp/deno.zip

# Verify Deno installation
RUN deno --version

# Install yt-dlp
RUN curl -L https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp -o /usr/local/bin/yt-dlp \
    && chmod a+rx /usr/local/bin/yt-dlp

# Verify yt-dlp installation
RUN yt-dlp --version

# Copy package files first for better layer caching
COPY package*.json ./

# Install npm dependencies
RUN npm install --omit=dev

# Copy application code
COPY . .

# Create temp directory for video downloads
RUN mkdir -p /app/temp && chmod 755 /app/temp

# Create cookies directory (cookies.txt should be mounted or added separately)
RUN mkdir -p /app/cookies && chmod 755 /app/cookies

# Start app
CMD ["npm", "run", "start:dev"]
