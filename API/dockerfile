# Dockerfile
FROM node:22-alpine

# Set working directory inside the container
WORKDIR /app

# Install system dependencies for yt-dlp
# - python3: required by yt-dlp
# - ffmpeg: required for merging video/audio streams
# - deno: JavaScript runtime required by yt-dlp for YouTube extraction
RUN apk add --no-cache \
    python3 \
    ffmpeg \
    curl \
    ca-certificates

# Install Deno (JavaScript runtime for yt-dlp)
RUN curl -fsSL https://deno.land/install.sh | DENO_INSTALL=/usr/local sh
ENV PATH="/usr/local/bin:$PATH"

# Verify Deno installation
RUN deno --version

# Install yt-dlp
RUN curl -L https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp -o /usr/local/bin/yt-dlp \
    && chmod a+rx /usr/local/bin/yt-dlp

# Verify yt-dlp installation
RUN yt-dlp --version

# Copy package files first for better layer caching
COPY package*.json ./

# Install npm dependencies
RUN npm install --omit=dev

# Copy application code
COPY . .

# Create temp directory for video downloads
RUN mkdir -p /app/temp && chmod 755 /app/temp

# Start app
CMD ["npm", "run", "start:dev"]
